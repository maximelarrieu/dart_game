extends skeleton.pug

block content
    h1 Liste des games
    p
        a(href="/api/players") Liste des joueurs    
    
    form(action=`/api/games/new`, method="GET")
        input(type="submit" value="Créer une partie")

    if games.length === 0
       p Pas de parties trouvées
    else
        table(style="width:50%", border=5)
            tr
                th Nom 
                th Mode 
                th Actions
            each game in games 
                tr(style="text-align: center") 
                    td= game.name 
                    td= game.mode
                    td
                        form(action=`/api/games/${game.id}`, method="GET")
                            input(type="submit" value="Détails")
                        form(action=`/api/games/${game.id}/delete`, method="POST")
                            input(type="submit" value="Supprimer")
                        form(action=`/api/games/${game.id}`, method="GET")
                            input(type="submit" value="Jouer")